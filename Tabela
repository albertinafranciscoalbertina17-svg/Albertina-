<script>
let activeCell = null;

// Detecta onde o utilizador estÃ¡ a escrever
document.querySelectorAll('.area').forEach(cell => {
    cell.addEventListener('click', () => {
        activeCell = cell;
    });
});

function addTask() {
    if (!activeCell) return alert("Clique primeiro numa cÃ©lula!");
    activeCell.innerHTML += "<br>ğŸ“Œ Nova tarefa...";
}

function addNote() {
    if (!activeCell) return alert("Clique primeiro numa cÃ©lula!");
    activeCell.innerHTML += "<br>ğŸ“ Nova nota...";
}

function addFile() {
    if (!activeCell) return alert("Clique primeiro numa cÃ©lula!");
    const input = document.createElement("input");
    input.type = "file";
    input.onchange = () => {
        const file = input.files[0];
        activeCell.innerHTML += `<br>ğŸ“ ${file.name}`;
    };
    input.click();
}

function clearBoard() {
    if (!activeCell) return alert("Clique primeiro numa cÃ©lula!");
    activeCell.innerHTML = "";
}
</script>

